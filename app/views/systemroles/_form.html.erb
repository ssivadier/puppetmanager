<%= simple_form_for(@systemrole) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, placeholder: 'Name' %>
  <%= f.input :gid, placeholder: 'Gid' %>
  <div class="form-group">
  <h3>Optional groups</h3>
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Remove</th>
      </tr>
    </thead>

    <tbody>
    <%= f.fields_for :optgroups, :optgroups do |builder| %>
      <tr>
        <td><%= builder.text_field :name %></td>
        <td><%= builder.check_box :_destroy %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
