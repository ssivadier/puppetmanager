<h1><%= t('title.user') %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>User email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.uid %></td>
        <td><%= link_to content_tag(:i, '', class: 'icon-search'), user %></td>
        <td><%= link_to content_tag(:i, '', class: 'icon-pencil'), edit_user_path(user) %></td>
        <td><%= link_to content_tag(:i, '', class: 'icon-remove'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('forms.buttons.newuser'), new_user_path %>
